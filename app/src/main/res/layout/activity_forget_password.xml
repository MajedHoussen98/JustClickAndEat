<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:background="@drawable/back_signin"
    android:textDirection="ltr"
    tools:context=".feature.forgetPassword.view.ForgetPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView5"
                style="@style/imageRegisterApp"
                app:srcCompat="@drawable/logo2" />

            <TextView
                style="@style/NormalTextStyle"
                android:text="@string/forgot_password"
                android:textColor="@color/whiteColor" />

            <TextView
                style="@style/bodyTextNormal"
                android:text="@string/forget_password_text" />

            <LinearLayout
                style="@style/linearRegister"
                android:layout_height="match_parent"
                >

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/EditText"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/_16sdp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email"
                        style="@style/ChangePasswordEdit"
                        android:hint="@string/hint_email"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_send"
                    style="@style/MainButton"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:background="@drawable/get_start"
                    android:text="@string/send" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>